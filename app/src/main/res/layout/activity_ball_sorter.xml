<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="544dp"
        android:layout_height="424dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <Button
            android:id="@+id/clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="clearCallback"
            android:text="Clear All" />

        <Button
            android:id="@+id/ball_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="testCallback"
            android:text="Test all" />

        <TextView
            android:id="@+id/fixed_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="       Ball 1" />

        <TextView
            android:id="@+id/fixed_2"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="Ball 2" />

        <TextView
            android:id="@+id/fixed_3"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="right
"
            android:text="Ball 3" />

        <TextView
            android:id="@+id/ball1color"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="          ---" />

        <TextView
            android:id="@+id/ball2color"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="left"
            android:text="           ---" />

        <TextView
            android:id="@+id/ball3color"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:gravity="right"
            android:text="---" />

        <Button
            android:id="@+id/ball1none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="none1Callback"
            android:text="None" />

        <Button
            android:id="@+id/ball2none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="none2Callback"
            android:text="None" />

        <Button
            android:id="@+id/ball3none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="none3Callback"
            android:text="None" />

        <Button
            android:id="@+id/ball1white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:onClick="white1Callback"
            android:text="White" />

        <Button
            android:id="@+id/ball2white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:onClick="white2Callback"
            android:text="White" />

        <Button
            android:id="@+id/ball3white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="6"
            android:onClick="white3Callback"
            android:text="White" />

        <Button
            android:id="@+id/ball1black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:onClick="black1Callback"
            android:text="Black" />

        <Button
            android:id="@+id/ball2black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:onClick="black2Callback"
            android:text="Black" />

        <Button
            android:id="@+id/ball3black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="7"
            android:onClick="black3Callback"
            android:text="Black" />

        <Button
            android:id="@+id/ball1green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:onClick="green1Callback"
            android:text="Green" />

        <Button
            android:id="@+id/ball2green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="9"
            android:onClick="green2Callback"
            android:text="Green" />

        <Button
            android:id="@+id/ball3green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="9"
            android:onClick="green3Callback"
            android:text="Green" />

        <Button
            android:id="@+id/ball1yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="yellow1Callback"
            android:text="Yellow" />

        <Button
            android:id="@+id/ball2yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="yellow2Callback"
            android:text="yellow" />

        <Button
            android:id="@+id/ball3yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="yellow3Callback"
            android:text="yellow" />

        <Button
            android:id="@+id/ball1red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:onClick="red1Callback"
            android:text="red" />

        <Button
            android:id="@+id/ball1blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="blue1Callback"
            android:text="blue" />

        <Button
            android:id="@+id/ball2red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:onClick="red2Callback"
            android:text="red" />

        <Button
            android:id="@+id/ball2blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:onClick="blue2Callback"
            android:text="blue" />

        <Button
            android:id="@+id/ball3red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="8"
            android:onClick="red3Callback"
            android:text="red" />

        <Button
            android:id="@+id/ball3blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:onClick="blue3Callback"
            android:text="blue" />

    </GridLayout>

    <Button
        android:id="@+id/goButton"
        android:layout_width="589dp"
        android:layout_height="76dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:onClick="goCallback"
        android:text="Go"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/coneButton"
        android:layout_width="586dp"
        android:layout_height="76dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        android:onClick="swapCallback"
        android:text="ConeSeek"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>
